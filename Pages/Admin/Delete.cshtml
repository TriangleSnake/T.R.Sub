@page "{id:int}"
@model T.R.Sub.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "刪除公告";
}

<h2>@ViewData["Title"]</h2>

<p>您確定要刪除公告嗎？</p>

<div>
    <strong>標題：</strong> @Model.Announcement.Title
</div>
<div>
    <strong>內容：</strong> @Html.Raw(Model.Announcement.Content)
</div>

<form method="post">
    <input type="hidden" asp-for="Announcement.Id" />
    <button type="submit">確認刪除</button>
    <a asp-page="Index">取消</a>
</form>